<p class="text-success"><%= notice %></p>

<div class="container">
  <h1>To-Do Application</h1>
  <h1>To-Do Application2</h1>
  <div class="mb-2">
    <%= link_to "New todo", new_todo_path, class: "btn btn-dark" %>
  </div>

  <div id="todos" class="table-responsive">
    <table class="table table-bordered table-white">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Task</th>
          <th>Completed?</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @todos.each do |todo| %>
          <tr>
            <td><%= todo.title %></td>
            <td><%= todo.description %></td>
            <td><%= todo.completed ? 'Yes' : 'No' %></td>
            <td><%= link_to "Show", todo, class: "btn btn-dark" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
