<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: todo, local: true, html: {class: "needs-validation", novalidate: false}) do |form| %>
        <% if todo.errors.any? %>
          <div class="alert alert-danger">
            <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

            <ul>
              <% todo.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
        <%= form.label :title, "<strong>Title</strong>".html_safe, class: "form-label" %>
        <%= form.text_field :title, class: "form-control", required: true %>
      </div>
      
      <div class="form-group">
        <%= form.label :description, "<strong>Description</strong>".html_safe, class: "form-label" %>
        <%= form.text_area :description, class: "form-control", required: true %>
      </div>
      
      <div class="form-check">
        <%= form.check_box :completed, class: "form-check-input" %>
        <%= form.label :completed, "<strong>Completed? </strong>".html_safe, class: "form-check-label" %>
      </div>
      
      
      <div class="text-center">
        <%= form.submit "Submit", class: "btn btn-dark mt-3" %>
      </div>
      
      <% end %>
    </div>
  </div>
</div>
